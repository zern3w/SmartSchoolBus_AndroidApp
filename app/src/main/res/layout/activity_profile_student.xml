<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="@dimen/profile_photo"
        android:layout_height="@dimen/profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/imgPhoto"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Nicknme!"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgPhoto"/>

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hello!"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvNickName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
        <ImageButton
            android:id="@+id/ibCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/call"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            />

        <ImageButton
            android:id="@+id/ibParentCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/parentcall"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:onClick="onClick"
            />

    <ImageButton
        android:id="@+id/ibSosCall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/soscall"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onClick"
 />
</RelativeLayout>
    </LinearLayout>

</RelativeLayout>